
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all collections for the website
    match /restaurant/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /sectionItems/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /categories/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /dishes/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
